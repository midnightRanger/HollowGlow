@model HollowGlow.Models.UserModel
@{
    ViewBag.Title = "Окно авторизации";
    Layout = null;
}


<head>
    <link rel="stylesheet" href="~/css/login.css" media="screen">
</head>
<body>
    <div class="background">
        <img src="~/images/bgzelda.jpg" />
    </div>
    <form asp-action="LoginEnter" asp-controller="home">

        <h1 class="font_zelda"> Login Here! </h1>

        <label for="username"> E-mail</label>
        <input type="email" asp-for="Email" placeholder="Email" id="username">

        <label for="password"> Password</label>
        <input type="password" asp-for="Password" placeholder="Password" id="password">

        <button type="submit"> Log In</button>

        <div class="form-group">
            <button asp-action="RegisterRedirect" asp-controller="home" type="submit"> Register</button>
        </div>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert">
                @ViewData.ModelState["Error"].Errors.First().ErrorMessage
            </div>
        }
    </form>
</body>